<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net4.0;net45;net4.8;netstandard2.1;netcoreapp3.1;net6.0</TargetFrameworks>
		<RootNamespace>MDbContext</RootNamespace>
		<AssemblyName>MT.LightORM</AssemblyName>
		<Authors>MarvelTiter</Authors>
		<Nullable>enable</Nullable>
		<LangVersion>10.0</LangVersion>
		<Description>使用表达式树（ExpressionTree）构建Sql，仅用于学习</Description>
		<Version>1.2.8</Version>
		<AssemblyVersion>1.2.8</AssemblyVersion>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/MarvelTiter/LightORM.git</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<FileVersion>1.2.8</FileVersion>
		<PackageReadmeFile>Nuget.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="ExpressionSql\DbGenerator\**" />
	  <EmbeddedResource Remove="ExpressionSql\DbGenerator\**" />
	  <None Remove="ExpressionSql\DbGenerator\**" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="ExpressionSql\ExpressionSqlCore.cs" />
		<Compile Remove="ExpressionSql\ExpressionSqlCore.Handle.cs" />
		<Compile Remove="ExpressionSql\ExpressionSqlCore.Result.cs" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions">
		  <Version>7.0.0</Version>
		</PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions">
		  <Version>7.0.0</Version>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<None Update="ExpressionSql\Interface\Select\select.js">
			<SubType>Code</SubType>
		</None>
		<None Update="README.md">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		  <CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
	  <PackageReference Include="Microsoft.Extensions.Logging.Abstractions">
	    <Version>7.0.0</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\Nuget.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
